<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <!-- Tabela Rental -->
    <changeSet id="03-create-rental" author="Pedro">
        <createTable tableName="rentals">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="book_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="rental_date" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="return_date" type="TIMESTAMP"/>
        </createTable>
        <addForeignKeyConstraint baseTableName="rentals"
                                 baseColumnNames="user_id"
                                 referencedTableName="users"
                                 referencedColumnNames="id"
                                 constraintName="fk_rental_user"/>
        <addForeignKeyConstraint baseTableName="rentals"
                                 baseColumnNames="book_id"
                                 referencedTableName="books"
                                 referencedColumnNames="id"
                                 constraintName="fk_rental_book"/>
    </changeSet>

</databaseChangeLog>
